    //头部按钮
    <LinearLayout
        android:id="@+id/top_button_ll"
        android:layout_width="match_parent"
        android:layout_weight="3.5"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        //上行

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            //button1
            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    android:id="@+id/top_bt_1"
                    style="@style/Top_bt"
                    android:background="@drawable/top_button_yellow"
                    android:src="@drawable/baozi" />

                <TextView
                    style="@style/Top_tv"
                    android:text="@string/top_tv_1" />
            </LinearLayout>

            //button2

            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    style="@style/Top_bt"
                    android:id="@+id/top_bt_2"
                    android:background="@drawable/top_button_og"
                    android:src="@drawable/chaoniangao" />

                <TextView
                    style="@style/Top_tv"
                    android:text="@string/top_tv_2" />
            </LinearLayout>

            //button3

            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    style="@style/Top_bt"
                    android:id="@+id/top_bt_3"
                    android:background="@drawable/top_button_yellow"
                    android:src="@drawable/mianbao" />

                <TextView
                    style="@style/Top_tv"
                    android:text="@string/top_tv_3" />
            </LinearLayout>

            //button4

            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    android:id="@+id/top_bt_4"
                    style="@style/Top_bt"
                    android:background="@drawable/top_button_og"
                    android:src="@drawable/miantiao" />

                <TextView
                    style="@style/Top_tv"
                    android:text="@string/top_tv_4"/>
            </LinearLayout>
        </LinearLayout>

        //下行
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            //button5
            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    android:id="@+id/top_bt_5"
                    style="@style/Top_bt"
                    android:background="@drawable/top_button_og"
                    android:src="@drawable/xidian" />

                <TextView
                    style="@style/Top_tv"
                    android:layout_below="@id/top_bt_5"
                    android:text="@string/top_tv_5" />
            </LinearLayout>


            //button6
            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
