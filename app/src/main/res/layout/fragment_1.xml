                    android:src="@drawable/fruit" />

                <TextView
                    style="@style/Top_tv"
                    android:layout_below="@id/top_bt_6"
                    android:text="@string/top_tv_6" />
            </LinearLayout>


            //button7
            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    android:id="@+id/top_bt_7"
                    style="@style/Top_bt"
                    android:background="@drawable/top_button_blue"
                    android:src="@drawable/drink" />

                <TextView
                    style="@style/Top_tv"
                    android:layout_below="@id/top_bt_7"
                    android:text="@string/top_tv_7" />
            </LinearLayout>


            //button8
            <LinearLayout style="@style/Top_ll">

                <com.zaodiancan.zaodiancan.View.CircleImageButton
                    android:id="@+id/top_bt_8"
                    style="@style/Top_bt"
                    android:background="@drawable/top_button_red"
