<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
    android:background="@android:color/white"
              android:layout_height="match_parent"
               >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/orange_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/actionbar_shop_leftback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back"
                android:background="@color/orange_main"
                android:padding="10dp"
                android:scaleType="centerInside" />



            <ImageButton
                android:id="@+id/actionbar_rightbt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/search"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@color/orange_main"
                android:padding="10dp"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <TextView
            android:id="@+id/actionbar_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注册"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >
    <!--用户头像ID uesr   注册按钮ID register  用户名  昵称 密码 三个EditText的ID 依次为 register_edit1 register_edit2 register_edit3 -->
    <ImageView
            android:id="@+id/user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/login_baozi"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                    android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="38dp">
                <ImageView android:layout_width="26dp" android:layout_height="32dp"
                        android:src="@drawable/username"
                        android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:text="用户名" android:textSize="20sp"
                          android:textColor="#000000"
                        android:padding="6dp"/>
                <EditText
                        android:id="@+id/register_edit1"
                        android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                        android:hint="请输入您的手机号/邮箱"
                        android:background="@null"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#f7f7f7"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="38dp">
            <ImageView android:layout_width="26dp" android:layout_height="32dp"
                       android:src="@drawable/name"
                       android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="昵    称" android:textSize="20sp"
                      android:textColor="#000000"
                      android:padding="6dp"/>
            <EditText
                    android:id="@+id/register_edit2"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                      android:hint="请不多于八个字符"
                      android:background="@null"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#f7f7f7"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="38dp">
            <ImageView android:layout_width="26dp" android:layout_height="32dp"
                       android:src="@drawable/password"
                       android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="密    码" android:textSize="20sp"
                      android:textColor="#000000"
                      android:padding="6dp"/>
            <EditText android:id="@+id/register_edit3"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                      android:inputType="textPassword"
                      android:hint="请设置为8-32位"
                      android:background="@null"/>
        </LinearLayout>



    </LinearLayout>

    <Button
            android:id="@+id/register"
            android:layout_width="90dp" android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#ffffff"
            android:background="#ff9400"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:textSize="20sp"/>
</LinearLayout>
</LinearLayout>